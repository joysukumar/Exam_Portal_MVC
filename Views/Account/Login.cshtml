@using Exam_Portal.Models.ViewModel
@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
        <h3 class="text-center text-primary mb-4">Login</h3>
        <form asp-action="Login" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label fw-semibold">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

           

            <div class="d-flex justify-content-between align-items-center mb-3">
                <a asp-action="Register" class="text-decoration-none">Don't have an account?</a>
                <input type="submit" value="Login" class="btn btn-primary px-4" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
